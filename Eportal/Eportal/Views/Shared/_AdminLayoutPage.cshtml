<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/assets/font-awesome/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <h1>
            Hello, world!
        </h1>
        <div class="row">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed button-color-collapse" data-toggle="collapse"
                        data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>
            </div>
            @Html.Action("LeftMenu","Admin")
            <div class="col-md-3">
                @Html.Partial("_AdminLeftMenu")
            </div>
            @RenderBody();

        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/assets/js")
    @Styles.Render("~/assets/css")
    @RenderSection("scripts", required: false)
</body>
</html>
